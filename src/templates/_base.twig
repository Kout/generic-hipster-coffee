{% block all %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="index.css">
        <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,700" rel="stylesheet">

        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/manifest.json">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
    <nav role="navigation" class="navbar navbar-expand navbar-light bg-light sticky-top">
        <div class="container flex-column flex-md-row">
            <a class="navbar-brand" href="/">
                <img src="/svg/logo.svg" class="ghc-logo" alt="">
            </a>
            <div>
                <div class="navbar-nav">
                    {% include '__nav.twig' %}
                </div>
            </div>
        </div>
    </nav>
    <main role="main">
        {% block content %}{% endblock %}
    </main>
    <footer class="ghc-footer bg-dark py-5">
        <div class="container">
            <div class="row mb-5">
                <div class="nav justify-content-center w-100">
                    {% include '__nav.twig' %}
                </div>
            </div>
            <div class="row text-white text-center">
                <h2 class="col-12 text-uppercase h5 font-weight-bold">#hipstersmakecoffee</h2>
                <p class="col-12">Follow us on <a href="#">Twitter</a> and <a href="">Instagram</a></p>
            </div>
        </div>
    </footer>
    {% block footerJavaScript %}{% endblock %}
    </body>
    </html>
{% endblock %}